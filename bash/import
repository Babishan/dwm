# Pacman shortcuts
alias update='sudo pacman -Syuu'
alias add='sudo pacman -S'
alias remove='sudo pacman -R'
alias search='sudo pacman -Ss'
alias autoremove='sudo pacman -Rcns $(pacman -Qdtq)'

# Yay shortcuts
alias yupdate='yay -Syuu'
alias yadd='yay -S'
alias yremove='yay -R'
alias ysearch='yay -Ss'
alias yautoremove='yay -Rcns $(yay -Qdtq)'

# Customization shortcuts
alias vibash='vi /home/thashan/.bashrc'
alias findit='sudo find / -name '
alias suckless='cd /home/thashan/Suckless'
alias dwm='suckless;cd dwm'

#fstrim
alias fstrim='sudo fstrim -Av'
